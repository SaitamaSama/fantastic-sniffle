{
  "compilerOptions": {
    "target": "es2019",
    "strict": true,
    "module": "commonjs",
    "sourceMap": true,
    "outDir": "./dist",
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "resolveJsonModule": true,
    "jsx": "react",
    "allowSyntheticDefaultImports": true
  },
  "include": ["src/frontend/**/*", "src/types.d.ts"],
  "exclude": ["node_modules"]
}
